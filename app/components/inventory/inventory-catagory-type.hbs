{{!-- 1st input fields --}}
<div class="container my-0 p-0">
    {{#each this.inputFieldNumbers as |item|}}
    <div class="d-flex gap-2 mx-auto my-auto w-100">
        <div class="d-flex flex-row gap-2 w-75">
            <label class="mr-2 w-25">
                <Input class="w-100 mt-1 px-1" @value={{item.type}} placeholder="Category type" {{on "input"
                    this.handleInputChange}} />
            </label>
            {{!-- <label class="mr-2">
                <Input class="w-100 mt-1 p-1" @value={{item.country}} placeholder="country" {{on "input"
                    this.handleInputChange}} />
            </label> --}}
            <PowerSelectMultiple class="w-50 mt-1 h-75 px-1" @value={{item.country}} @searchEnabled={{true}} @options={{this.names}}
                @selected={{item.country}} @labelText="Name" @placeholder="Select Country" @onChange={{(fn this.handlemultipleSelection item)}}
                as |name|>
                {{name}}
            </PowerSelectMultiple>
            {{!-- <PowerSelectMultiple class="w-50 mt-1 h-75 px-1" @value={{item.country}} @searchEnabled={{true}} @options={{this.names}}
                @selected={{this.name}} @labelText="Name" @placeholder="Select Country" @onChange={{fn (mut this.name)}}
                as |name|>
                {{name}}
            </PowerSelectMultiple> --}}
            <div>
                <button type="button" class="btn btn-danger mt-1 mx-1" {{on 'click' (fn this.handleDeleteInputField
                    item)}}>X</button>
            </div>
        </div>
    </div>
    {{/each}}
    <div class="d-flex my-0">
        <button type="button" class="my-3 btn btn-primary w-lg-25 px-4" {{on 'click'
            this.handleAddInventory}}>+</button>
        <button type="button" class="my-3 btn btn-success w-lg-25 px-4 mx-2" hidden={{(eq this.inputFieldNumbers.length
            0)}} {{on 'click' this.HandleSave}}>Save</button>
        {{!-- for post request spinner --}}
        {{#if this.isLoadingPOST}}
        <div hidden={{(eq this.isLoadingPOST false)}} class="my-auto">
            <div class="spinner-border" role="status">
            </div>
        </div>
        {{/if}}
    </div>
</div>


{{!-- table --}}
<Inventory::InventoryTable @columns={{this.inventoryTypeColumns}} @items={{this.items}}
    @handleCancel={{this.handleCancel}} @handleEdit={{this.handleEdit}} @handleSave={{this.handleSave}}
    @tabledropdown={{this.TableDropDownnames}} @handleStatusChange={{this.handleStatusChange}}
    @handleStatus={{this.handleStatus}} @isloading={{this.isloading}} @handleInputType={{this.handleInputType}} />