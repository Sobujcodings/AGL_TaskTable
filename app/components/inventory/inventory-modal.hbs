<div {{did-insert (fn this.insertForModal this.handleItemsToNull) }} class="modal fade" id="inventoryModalContent"
  tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog" role="document" style="max-width: 90%">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">
          {{!-- {{this.ModalHeader}} --}}
          {{!-- {{if @isEdit "Edit" "Create"}} --}}
          {{#if (eq @inventoryType 'inventory-list')}}
              <p>Create Inventory</p>
          {{else}}
              <p>{{@inventoryType}}</p>
          {{/if}}
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">
            Ã—
          </span>
        </button>
      </div>
      <div class="modal-body">
        {{#if (eq @inventoryType "Inventory type")}}
        <Inventory::InventoryType />
        {{ else if (eq @inventoryType "Inventory Category type")}}
        <Inventory::InventoryCatagoryType />
        {{ else if (eq @inventoryType "Catagory")}}
        <Inventory::InventoryCatagory />
        {{ else if (eq @inventoryType "Storage type")}}
        <Inventory::StorageType />
        {{ else if (eq @inventoryType "Allocation type")}}
        <Inventory::AllocationType />
        {{ else if (eq @inventoryType "Unit of Measure")}}
        <Inventory::UnitOfMeasure />
        {{ else if (eq @inventoryType "inventory-list")}}
        <Inventory::CreateInventory @createInventoryEditItem={{@createInventoryEditItem}} />
        {{/if}}
      </div>
      <div class="modal-footer" hidden={{(eq @inventoryType "inventory-list" )}}>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>