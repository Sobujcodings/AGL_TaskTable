        <Inventory::InventoryCatagory />
        {{ else if (eq @inventoryType "Storage type")}}
        <Inventory::StorageType />
        {{ else if (eq @inventoryType "Allocation type")}}
        <Inventory::AllocationType />
        {{ else if (eq @inventoryType "Unit Measure")}}
        <Inventory::UnitOfMeasure />
        {{ else if (eq @inventoryType "Create Inventory")}}
        <Inventory::CreateInventory @createInventoryEditItem={{@createInventoryEditItem}} />
        {{/if}}
      </div>
      <div class="modal-footer" hidden={{(eq @inventoryType "Create Inventory")}}>
