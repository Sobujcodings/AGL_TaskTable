
{{! Inventory Buttons }}
<section class="my-4">
  <div class="flex">
    <div class="mx-auto text-center">
      {{! <Inventory::InventoryType class="mx-auto text-center"></Inventory::InventoryType> }}

      <button
        type="button"
        class="btn btn-secondary btn-lg"
        {{on "click" (fn this.changeInventoryType "Inventory type")}}
      >
        Inventory type
      </button>

      <button
        type="button"
        class="btn btn-secondary btn-lg"
        {{on "click" (fn this.changeInventoryType "Inventory Category type")}}
      >
        Inventory Category type
      </button>

      <button
        type="button"
        class="btn btn-secondary btn-lg"
        {{on "click" (fn this.changeInventoryType "Catagory")}}
      >
        Inventory Category
      </button>
    </div>
    <div class="my-2 mx-auto text-center">
      <button
        type="button"
        class="btn btn-secondary btn-lg"
        onclick={{fn this.changeInventoryType "Storage type"}}
      >
        Storage type
      </button>

      <button
        type="button"
        class="btn btn-secondary btn-lg"
        onclick={{fn this.changeInventoryType "Allocation type"}}
      >
        Allocation type
      </button>

      <button
        type="button"
        class="btn btn-secondary btn-lg"
        onclick={{fn this.changeInventoryType "Unit Measure"}}
      >
        Unit of Measure
      </button>
    </div>

    <div class="mx-auto text-center mt-3">
      <button
        type="button"
        class="btn btn-primary btn-lg"
        onclick={{fn this.changeInventoryType "Create Inventory"}}
      >
        Create Inventory
      </button>
    </div>
  </div>
</section>


{{!-- create inventory table --}}
{{!-- show this when there is value in the formArray --}}
{{#if this.firstObjectKeys}}
<section class="table-responsive">
        <h4 class="mx-2">Create Inventory</h4>
    <table class="table table-striped border">
        <thead class="">
            <tr>
               {{#each this.firstObjectKeys as |item|}}
                <th class="border text-center" scope="col">{{item}}</th>
                {{/each}}
                <th scope="col" class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
                {{#each this.FormArray as |item |}}
                    <tr class="my-auto">
                        <td class="border text-center">{{item.sku}}</td>
                        <td class="border text-center">{{item.Name}}</td>
                        <td class="border text-center">{{item.Des}}</td>
                        <td class="border text-center">{{item.FullDes}}</td>
                        <td class="border text-center">{{item.Manufacture}}</td>
                        <td class="border text-center">{{item.Expire}}</td>
                        <td class="border text-center">{{item.StorageType}}</td>
                        <td class="border text-center">{{item.Catagory}}</td>
                        <td class="border text-center">{{item.CategoryType}}</td>
                        <td class="border text-center">{{item.InventoryType}}</td>
                        <td class="border text-center">{{item.AllocationType}}</td>
                        <td class="border text-center">{{item.UnitMeasure}}</td>
                        <td class="border text-center">{{item.status}}</td>
                        <td class="my-auto mx-auto text-center">
                          <button 
                              type="button" 
                              class="btn btn-primary btn-sm mx-auto my-auto text-center w-100"
                              {{on "click" (fn this.HandleCreateInventoryEdit "Create Inventory" item)}}
                          >
                              Edit
                          </button>
                        </td>
                    </tr>
                {{/each}}
